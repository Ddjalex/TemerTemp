<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Temer Properties Admin' %></title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome for more icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Custom CSS -->
  <link href="/public/css/admin.css" rel="stylesheet">
  
  <% if (typeof extraHead !== 'undefined') { %>
    <%- extraHead %>
  <% } %>
</head>
<body class="admin-body bg-light">
  <div class="container-fluid">
    <div class="row">
      <!-- Enhanced Professional Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block professional-sidebar collapse">
        <div class="position-sticky pt-0">
          <div class="sidebar-brand text-center py-4 border-bottom border-secondary border-opacity-25">
            <div class="brand-logo mb-2">
              <div class="logo-circle">
                <i class="fas fa-building"></i>
              </div>
            </div>
            <h5 class="mb-0 fw-bold text-white">Temer Properties</h5>
            <small class="text-white-50">Admin Dashboard</small>
          </div>
          
          <div class="nav-section mt-4">
            <small class="nav-section-title px-3 text-white-50 fw-semibold">MAIN MENU</small>
            <ul class="nav flex-column mt-2">
              <li class="nav-item">
                <a class="nav-link professional-nav-link" href="/admin/dashboard">
                  <div class="nav-icon">
                    <i class="fas fa-chart-line"></i>
                  </div>
                  <span>Dashboard</span>
                  <div class="nav-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link professional-nav-link" href="/admin/properties">
                  <div class="nav-icon">
                    <i class="fas fa-home"></i>
                  </div>
                  <span>Properties</span>
                  <div class="nav-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link professional-nav-link" href="/admin/hero">
                  <div class="nav-icon">
                    <i class="fas fa-images"></i>
                  </div>
                  <span>Hero Slides</span>
                  <div class="nav-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                </a>
              </li>
            </ul>
          </div>
          
          <div class="nav-section mt-4">
            <small class="nav-section-title px-3 text-white-50 fw-semibold">CONTENT</small>
            <ul class="nav flex-column mt-2">
              <li class="nav-item">
                <a class="nav-link professional-nav-link" href="/admin/blog">
                  <div class="nav-icon">
                    <i class="fas fa-pen-alt"></i>
                  </div>
                  <span>Blog Posts</span>
                  <div class="nav-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link professional-nav-link" href="/admin/team">
                  <div class="nav-icon">
                    <i class="fas fa-users"></i>
                  </div>
                  <span>Team Members</span>
                  <div class="nav-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                </a>
              </li>
            </ul>
          </div>
          
          <div class="nav-section mt-4">
            <small class="nav-section-title px-3 text-white-50 fw-semibold">ADMINISTRATION</small>
            <ul class="nav flex-column mt-2">
              <li class="nav-item">
                <a class="nav-link professional-nav-link" href="/admin/users">
                  <div class="nav-icon">
                    <i class="fas fa-user-shield"></i>
                  </div>
                  <span>Users</span>
                  <div class="nav-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link professional-nav-link" href="/admin/settings">
                  <div class="nav-icon">
                    <i class="fas fa-cog"></i>
                  </div>
                  <span>Settings</span>
                  <div class="nav-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Enhanced Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <!-- Enhanced Top Navigation -->
        <div class="top-navbar d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-3 mb-4">
          <h1 class="h2"><%= pageTitle || 'Dashboard' %></h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="dropdown">
              <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle"></i>
                <%= user ? user.firstName + ' ' + user.lastName : 'Admin' %>
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/admin/users/<%= user ? user._id : '#' %>">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/admin/auth/logout">Logout</a></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Alerts -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- Page content -->
        <%- body %>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="/public/js/admin.js"></script>
  
  <% if (typeof extraScripts !== 'undefined') { %>
    <%- extraScripts %>
  <% } %>
</body>
</html>