<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .temer-green { background-color: #7CB342; }
        .bg-temer-green { background-color: #7CB342; }
        .text-temer-green { color: #7CB342; }
        .border-temer-green { border-color: #7CB342; }
    </style>
</head>
<body class="bg-gray-50">

<!-- Admin Navigation -->
<nav class="bg-white shadow-lg border-b-2 border-temer-green">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex items-center space-x-8">
                <div class="flex-shrink-0 flex items-center">
                    <i class="fas fa-building text-temer-green text-2xl mr-2"></i>
                    <span class="text-xl font-bold text-gray-900">Temer Properties</span>
                </div>
                <div class="flex items-center space-x-1">
                    <a href="/admin/dashboard" class="text-gray-500 hover:text-gray-700">Dashboard</a>
                    <span class="text-gray-500">/</span>
                    <span class="text-gray-900 font-medium">Hero Slides</span>
                </div>
            </div>
            <div class="flex items-center space-x-4">
                <div class="w-8 h-8 bg-temer-green rounded-full flex items-center justify-center">
                    <span class="text-white font-semibold text-sm"><%= user.fullName.split(' ').map(n => n[0]).join('') %></span>
                </div>
                <a href="/admin/logout" class="text-red-600 hover:text-red-800">
                    <i class="fas fa-sign-out-alt mr-1"></i> Logout
                </a>
            </div>
        </div>
    </div>
</nav>

<main class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Hero Slides</h1>
            <a href="/admin/hero/new" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                <i class="fas fa-plus mr-2"></i> Add Slide
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            <% if (slides.length === 0) { %>
                <div class="col-span-full">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
                        <i class="fas fa-images text-4xl text-gray-400 mb-4"></i>
                        <p class="text-gray-500 mb-4">No hero slides found.</p>
                        <a href="/admin/hero/new" class="text-blue-600 hover:underline">Create your first slide</a>.
                    </div>
                </div>
            <% } else { %>
                <% slides.forEach(function(slide) { %>
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                        <% if (slide.image && slide.image.url) { %>
                            <div class="aspect-w-16 aspect-h-9">
                                <img src="<%= slide.image.url %>" alt="<%= slide.image.alt || slide.title || 'Hero Slide' %>" class="w-full h-48 object-cover">
                            </div>
                        <% } else { %>
                            <div class="h-48 bg-gray-200 flex items-center justify-center">
                                <i class="fas fa-image text-gray-400 text-4xl"></i>
                            </div>
                        <% } %>
                        
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-3">
                                <h3 class="text-lg font-semibold text-gray-900">
                                    <%= slide.title || 'Untitled Slide' %>
                                </h3>
                                <div class="flex items-center space-x-2">
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= slide.isActive ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                        <%= slide.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                </div>
                            </div>
                            
                            <% if (slide.subtitle) { %>
                                <p class="text-sm text-gray-600 mb-2"><%= slide.subtitle %></p>
                            <% } %>
                            
                            <% if (slide.description) { %>
                                <p class="text-sm text-gray-500 mb-4">
                                    <%= slide.description.length > 100 ? slide.description.substring(0, 100) + '...' : slide.description %>
                                </p>
                            <% } %>
                            
                            <% if ((slide.ctaButton && slide.ctaButton.text) || slide.buttonText) { %>
                                <div class="mb-4">
                                    <span class="inline-flex items-center px-3 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">
                                        <i class="fas fa-link mr-1"></i>
                                        <%= slide.ctaButton?.text || slide.buttonText %>
                                    </span>
                                </div>
                            <% } %>
                            
                            <div class="flex items-center justify-between">
                                <div class="text-xs text-gray-500">
                                    Order: <%= slide.order || slide.displayOrder || 0 %>
                                </div>
                                
                                <div class="flex items-center space-x-2">
                                    <a href="/admin/hero/view/<%= slide._id %>" class="text-gray-600 hover:text-gray-900" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admin/hero/edit/<%= slide._id %>" class="text-blue-600 hover:text-blue-900" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteSlide('<%= slide._id %>', '<%= slide.title || 'this slide' %>')" class="text-red-600 hover:text-red-900" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</main>

<script>
function deleteSlide(id, title) {
    if (confirm(`Are you sure you want to delete "${title}"? This action cannot be undone.`)) {
        fetch(`/admin/hero/delete/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert(data.message || 'Failed to delete slide');
            }
        })
        .catch(error => {
            console.error('Delete error:', error);
            alert('Failed to delete slide');
        });
    }
}
</script>

</body>
</html>