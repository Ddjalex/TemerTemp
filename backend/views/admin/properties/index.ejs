<% 
const pageTitle = 'Properties';

// Security helper function
const escapeHtml = (text) => {
  if (!text) return '';
  return String(text)
    .replace(/&/g, '&amp;')
    .replace(/</g, '&lt;')
    .replace(/>/g, '&gt;')
    .replace(/"/g, '&quot;')
    .replace(/'/g, '&#x27;');
};
%>

<%- include('../layout', { 
  title: 'Properties - Temer Properties Admin', 
  pageTitle,
  extraHead: `
    <style>
      .properties-header {
        background: var(--temer-gradient);
        border-radius: 24px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
        box-shadow: var(--box-shadow);
        position: relative;
        overflow: hidden;
      }
      .properties-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 100px;
        height: 200%;
        background: rgba(255,255,255,0.1);
        transform: rotate(15deg);
      }
      .filter-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 2px solid var(--glass-border);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: var(--box-shadow);
      }
      .property-card.modern {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 2px solid var(--glass-border);
        border-radius: 20px;
        transition: var(--transition);
        overflow: hidden;
        box-shadow: var(--box-shadow);
      }
      .property-card.modern:hover {
        transform: translateY(-8px);
        box-shadow: var(--hover-shadow);
        border-color: var(--temer-accent);
      }
      .stats-overview {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 2px solid var(--glass-border);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: var(--box-shadow);
      }
    </style>
  `,
  body: `
    <!-- Professional Header -->
    <div class="properties-header">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="mb-3 fw-bold">Property Management</h1>
          <p class="mb-0 opacity-75 fs-5">Manage and organize your property listings with advanced tools</p>
        </div>
        <a href="/admin/properties/new" class="btn btn-futuristic">
          <i class="fas fa-plus me-2"></i> Add New Property
        </a>
      </div>
    </div>
    
    <!-- Stats Overview -->
    <div class="stats-overview">
      <div class="row g-4">
        <div class="col-md-3">
          <div class="ultra-stat-card">
            <div class="ultra-stat-number">${properties.length}</div>
            <div class="ultra-stat-label">Total Properties</div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="ultra-stat-card">
            <div class="ultra-stat-number">${properties.filter(p => p.status === 'for-sale').length}</div>
            <div class="ultra-stat-label">For Sale</div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="ultra-stat-card">
            <div class="ultra-stat-number">${properties.filter(p => p.status === 'for-rent').length}</div>
            <div class="ultra-stat-label">For Rent</div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="ultra-stat-card">
            <div class="ultra-stat-number">${properties.filter(p => p.status === 'sold').length}</div>
            <div class="ultra-stat-label">Sold</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Advanced Filters -->
    <div class="filter-card">
      <div class="d-flex align-items-center mb-4">
        <i class="fas fa-filter text-primary me-3 fs-4"></i>
        <h4 class="mb-0 fw-bold">Advanced Filters</h4>
      </div>
      <form method="GET" class="row g-4">
        <div class="col-md-4">
          <div class="form-floating">
            <input type="text" class="form-control form-control-modern" id="search" name="search" placeholder="Search properties..." value="${escapeHtml(filters.search || '')}">
            <label for="search"><i class="fas fa-search me-2"></i>Search Properties</label>
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-floating">
            <select class="form-select form-control-modern" id="status" name="status">
              <option value="">All Status</option>
              <option value="for-sale" ${filters.status === 'for-sale' ? 'selected' : ''}>For Sale</option>
              <option value="for-rent" ${filters.status === 'for-rent' ? 'selected' : ''}>For Rent</option>
              <option value="sold" ${filters.status === 'sold' ? 'selected' : ''}>Sold</option>
              <option value="rented" ${filters.status === 'rented' ? 'selected' : ''}>Rented</option>
            </select>
            <label for="status"><i class="fas fa-tag me-2"></i>Status</label>
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-floating">
            <select class="form-select form-control-modern" id="type" name="type">
              <option value="">All Types</option>
              <option value="house" ${filters.type === 'house' ? 'selected' : ''}>House</option>
              <option value="apartment" ${filters.type === 'apartment' ? 'selected' : ''}>Apartment</option>
              <option value="condo" ${filters.type === 'condo' ? 'selected' : ''}>Condo</option>
              <option value="villa" ${filters.type === 'villa' ? 'selected' : ''}>Villa</option>
            </select>
            <label for="type"><i class="fas fa-home me-2"></i>Type</label>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-floating">
            <select class="form-select form-control-modern" id="agent" name="agent">
              <option value="">All Agents</option>
              ${agents.map(agent => 
                `<option value="${escapeHtml(agent._id)}" ${filters.agent === agent._id ? 'selected' : ''}>${escapeHtml(agent.firstName)} ${escapeHtml(agent.lastName)}</option>`
              ).join('')}
            </select>
            <label for="agent"><i class="fas fa-user me-2"></i>Agent</label>
          </div>
        </div>
        <div class="col-md-1">
          <button type="submit" class="btn btn-futuristic h-100 w-100">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>
    </div>

    <!-- Professional Properties Grid -->
    <div class="row g-4">
      ${properties.length > 0 ? properties.map(property => `
        <div class="col-lg-6 col-xl-4">
          <div class="property-card modern h-100">
            <div class="card-body p-4">
              <div class="d-flex align-items-start mb-3">
                ${property.images && property.images.length > 0 ? 
                  `<img src="${escapeHtml(property.images[0].url)}" alt="${escapeHtml(property.title)}" class="property-image me-3" style="width:80px;height:80px;border-radius:12px;object-fit:cover;">` : 
                  '<div class="property-placeholder me-3" style="width:80px;height:80px;border-radius:12px;background:var(--temer-gradient);display:flex;align-items:center;justify-content:center;color:white;"><i class="fas fa-home"></i></div>'
                }
                <div class="flex-grow-1">
                  <h5 class="mb-1 fw-bold">${escapeHtml(property.title)}</h5>
                  <p class="text-muted mb-2 small">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    ${escapeHtml(property.address.street)}, ${escapeHtml(property.address.city)}
                  </p>
                  <div class="d-flex align-items-center gap-2 mb-2">
                    <span class="badge bg-light text-dark">${escapeHtml(property.propertyType)}</span>
                    <span class="status-badge-modern ${property.status === 'for-sale' ? 'success' : property.status === 'sold' ? 'danger' : 'warning'}">${escapeHtml(property.status.replace('-', ' '))}</span>
                  </div>
                </div>
              </div>
              
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                  <div class="h4 mb-0 fw-bold text-success">$${Number(property.price || 0).toLocaleString()}</div>
                  <small class="text-muted">
                    <i class="fas fa-user me-1"></i>
                    ${property.agent ? escapeHtml(property.agent.firstName) + ' ' + escapeHtml(property.agent.lastName) : 'No agent'}
                  </small>
                </div>
                <div class="text-end">
                  <small class="text-muted d-block">${new Date(property.createdAt).toLocaleDateString()}</small>
                  ${property.features && property.features.bedrooms ? `<small class="text-muted"><i class="fas fa-bed me-1"></i>${property.features.bedrooms} beds</small>` : ''}
                </div>
              </div>
              
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex gap-2">
                  <a href="/admin/properties/${property._id}" class="btn btn-sm btn-outline-info" title="View Details">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/admin/properties/${property._id}/edit" class="btn btn-sm btn-outline-primary" title="Edit Property">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button class="btn btn-sm btn-outline-danger" data-confirm-delete data-url="/admin/properties/${property._id}" title="Delete Property">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
                <a href="/admin/properties/${property._id}/edit" class="btn btn-sm btn-futuristic">
                  <i class="fas fa-arrow-right me-1"></i> Manage
                </a>
              </div>
            </div>
          </div>
        </div>
      `).join('') : `
        <div class="col-12">
          <div class="glass-card text-center py-5">
            <i class="fas fa-home text-muted mb-4" style="font-size: 5rem; opacity: 0.3;"></i>
            <h3 class="text-muted mb-3">No Properties Found</h3>
            <p class="text-muted mb-4 fs-5">Start building your property portfolio by adding your first listing.</p>
            <a href="/admin/properties/new" class="btn btn-futuristic btn-lg">
              <i class="fas fa-plus me-2"></i> Add Your First Property
            </a>
          </div>
        </div>
      `}
    </div>

    ${pagination && pagination.totalPages > 1 ? `
      <div class="d-flex justify-content-between align-items-center mt-5">
        <div class="text-muted fs-6">
          Showing ${((pagination.currentPage - 1) * pagination.perPage) + 1} to ${Math.min(pagination.currentPage * pagination.perPage, pagination.totalItems)} of ${pagination.totalItems} properties
        </div>
        <nav>
          <ul class="pagination pagination-lg mb-0">
            ${pagination.hasPrev ? `
              <li class="page-item">
                <a class="page-link" href="?page=1&${new URLSearchParams(filters).toString()}">
                  <i class="fas fa-angle-double-left"></i>
                </a>
              </li>
              <li class="page-item">
                <a class="page-link" href="?page=${pagination.prevPage}&${new URLSearchParams(filters).toString()}">
                  <i class="fas fa-chevron-left"></i> Previous
                </a>
              </li>
            ` : ''}
            
            ${Array.from({length: Math.min(5, pagination.totalPages)}, (_, i) => {
              let pageNum;
              if (pagination.totalPages <= 5) {
                pageNum = i + 1;
              } else if (pagination.currentPage <= 3) {
                pageNum = i + 1;
              } else if (pagination.currentPage >= pagination.totalPages - 2) {
                pageNum = pagination.totalPages - 4 + i;
              } else {
                pageNum = pagination.currentPage - 2 + i;
              }
              return `
                <li class="page-item ${pageNum === pagination.currentPage ? 'active' : ''}">
                  <a class="page-link" href="?page=${pageNum}&${new URLSearchParams(filters).toString()}">${pageNum}</a>
                </li>
              `;
            }).join('')}
            
            ${pagination.hasNext ? `
              <li class="page-item">
                <a class="page-link" href="?page=${pagination.nextPage}&${new URLSearchParams(filters).toString()}">
                  Next <i class="fas fa-chevron-right"></i>
                </a>
              </li>
              <li class="page-item">
                <a class="page-link" href="?page=${pagination.totalPages}&${new URLSearchParams(filters).toString()}">
                  <i class="fas fa-angle-double-right"></i>
                </a>
              </li>
            ` : ''}
          </ul>
        </nav>
      </div>
    ` : ''}
  `,
  user
}) %>